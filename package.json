{
  "name": "voicer",
  "displayName": "Voicer",
  "version": "0.0.5",
  "description": "Voicer is a browser plugin that brings your selected web text to life through speech using TTS(Text To Speech) technology.",
  "author": "jianliangw1@gmail.com",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@adobe/react-spectrum": "^3.35.1",
    "@plasmohq/storage": "^1.10.0",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.475.0",
    "plasmo": "0.90.3",
    "prop-types": "^15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-epic-spinners": "^0.5.0",
    "react-modern-audio-player": "1.4.0-rc.2",
    "sharp": "^0.32.6",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.3",
    "prettier": "3.2.4",
    "tailwindcss": "3",
    "typescript": "5.3.3"
  },
  "trustedDependencies": [
    "sharp"
  ],
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "contextMenus",
      "activeTab"
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "sandboxes/player.html",
          "assets/*"
        ],
        "matches": [
          "*://*/*"
        ]
      }
    ]
  }
}
